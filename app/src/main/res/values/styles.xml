<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
<style name="header_style">

    <item name="android:textColor">#b2000000</item>
    <item name="android:textSize">20sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:layout_marginTop">-75dp</item>
    <item name="android:gravity">center_horizontal</item>
</style>

    <style name="tag_style">
         <item name="android:background">@drawable/rectangle_header</item>
         <item name="android:textColor">#FFFFFF</item>
         <item name="android:textSize">10sp</item>
        <item name="android:layout_marginRight">10dp</item>
         <item name="android:textStyle">bold</item>
         <item name="android:layout_gravity">right</item>
</style>
    <style name="blackback">
        <item name="android:background">@drawable/rectangle_header</item>
    </style>
</resources>
